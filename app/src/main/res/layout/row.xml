<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/smsType"
            style="@style/Base.TextAppearance.AppCompat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="left"
            android:padding="5dp"
            android:text="type"
            android:textColor="#ffc107"
            android:textSize="18dp"
            android:textStyle="bold|italic"
            android:typeface="sans" />

        <TextView
            android:id="@+id/smsAmt"
            style="@style/Base.TextAppearance.AppCompat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/smsType"
            android:padding="5sp"
            android:text="Amount"
            android:textColor="#ff6e40"
            android:textSize="15sp"
            android:textStyle="bold"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/smsDate"
            style="@style/Base.TextAppearance.AppCompat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/smsAmt"
            android:padding="5sp"
            android:text="Date"
            android:textColor="#5677fc"
            android:textSize="15sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/smsBal"
            style="@style/Base.TextAppearance.AppCompat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/smsType"
            android:layout_below="@+id/textView"
            android:padding="5sp"
            android:text="bal"
            android:textColor="#ff6e40"
            android:textIsSelectable="false"
            android:textSize="15sp"
            android:textStyle="bold"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/textView"
            style="@style/Base.TextAppearance.AppCompat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/smsType"
            android:gravity="center"
            android:padding="5dp"
            android:text="Balance"
            android:textColor="#e040fb"
            android:textSize="18sp"
            android:typeface="serif" />
    </RelativeLayout>
</android.support.v7.widget.CardView>

